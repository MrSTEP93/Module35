@model UnsocNetwork.ViewModels.Account.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="block-reg background-white">
    <h4 class="center">Кто ты?</h4>
    <form class="frm" method="post" asp-controller="AccountManager" asp-action="Login">

        <div asp-validation-summary="ModelOnly"></div>
        <div>
            <div class="mrgn">
                EMail:<br />
                <input asp-for="@Model.Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div>
            <div class="mrgn">
                Пароль:<br />
                <input asp-for="@Model.Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div>
            <input class="enter_submit" type="submit" value="Войти" />
        </div>
    </form>
</div>